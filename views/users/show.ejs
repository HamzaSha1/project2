<%- include('../partials/header') %>
<div class="bookingBackground"> 
<% if(user.role === "Nurse") { %>

<section id="show-page">
    <div class="container mt-4 mb-4 p-3 d-flex justify-content-center"> <div class="card p-4"> 
        <div class=" image d-flex flex-column justify-content-center align-items-center"> 
         <img src="<%= user.avatar %>" height="100" width="100" />
        <span class="name mt-3"><%= user.name %></span> 
        <span class="idd"><%= user.email %></span> 
        <div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
        </div>
             <div class="d-flex mt-2"> 
                <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit Profile</a>
              </div>
             <div class="text mt-3"> <span>Qualifications: <%= user.qualifications %><br>
                <br> Education: <%= user.education %> <br>
                <br> Price: <%= user.price %></span> </div> 
                <div class="gap-3 mt-3 icons d-flex flex-row justify-content-center align-items-center"><div>
                    <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
                    <input type="submit" name="" class="btn btn-danger" value="Delete account">
                </form>
                </div></div></div> </div>
          </div>
</section>
<% } else if(user.role === 'Customer') { %> 
    <section id="show-page">
    <div class="container mt-4 mb-4 p-3 d-flex justify-content-center"> <div class="card p-4"> 
        <div class=" image d-flex flex-column justify-content-center align-items-center"> 
         <img src="<%= user.avatar %>" height="100" width="100" />
        <span class="name mt-3"><%= user.name %></span> 
        <span class="idd"><%= user.email %></span> 
        <div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
        </div> <div class="d-flex flex-row justify-content-center align-items-center mt-3">
             <span class="number">Phone: <%= user.phoneNumber %></span> </div> 
             <div class="d-flex mt-2"> 
                <a href="/users/<%= user._id %>/edit" class="btn btn-primary">Edit Profile</a>
              </div>
             <div class="text mt-3"> <span>House Number: <%= user.address.houseNumber %><br>
                <br> Block: <%= user.address.blockNumber %> <br>
                <br> Road Number: <%= user.address.roadNumber %></span> </div> 
                <div class="gap-3 mt-3 icons d-flex flex-row justify-content-center align-items-center"><div>
                    <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
                    <input type="submit" name="" class="btn btn-danger" value="Delete account">
                </form>
                </div></div></div> </div>
          </div>
</section>
<% } %>
</div>
<%- include('../partials/footer') %>