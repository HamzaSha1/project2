<body>

  <!-- ======= Top Bar ======= -->
  <div id="topbar" class="d-flex align-items-center">
    <div class="container d-flex justify-content-between">
      <div class="contact-info d-flex align-items-center">
        <i class="bi bi-envelope"></i> <a href="mailto:contact@EasyNurse.com">contact@EasyNurse.com</a>
        <i class="bi bi-phone"></i> +97333838373
      </div>
    </div>
  </div>

  <!-- ======= Header ======= -->
  <header id="header">
    <div class="container d-flex align-items-center">
      <a class="logo me-auto"><img src="/img/favicon.png" alt="" class="img-fluid"></a>
      <h1 class="logo me-auto">EasyNurse: Book your nurse now</h1>
      <nav class="navbar navbar-expand-lg navbar-light bg-light bg-white "> 
        <di class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <ul class="d-flex flex-wrap flex-md-nowrap"> 
          <li class="nav-item"><a class="nav-link " href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about/">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/nurses/">Find a Nurse</a></li>
          <% if(user) { %>
            <li class="nav-item"><a href="/bookings/<%= user?._id %>" class="nav-link">Bookings <%= user.booking.length ? '(' + user.booking.length + ')' : '' %></a></li>
          <% } %>
          <% if(user) { %>
            <li class="nav-item"><a href="/users/<%= user?._id %>" class="nav-link">Profile</a></li>
          <% } %>
        </ul>
      </di>
      </nav><!-- .navbar -->
      <div class="col-md-2 text-end">
        <div class="col-md-6">
          <% if (user) { %>
            <a href="/logout" type="button" class="btn btn-primary d-md-inline"><span>Logout</span></a>
          <% } else { %>
            <a href="/auth/google" type="button" class="btn btn-primary d-md-inline"><span>Login</span></a>
          <% } %>
        </div>
      </div>
    
    </div>
  </header>
  <!-- End Header -->

