<%- include('../partials/header') %>

  <form>
    <fieldset disabled>
      <div class="row my-3">
        <hr>
        <div class="col">
          <label for="nurseName">Nurse Name</label>
          <input type="text" id="nurseName" class="form-control" placeholder="<%= nurse.name %>">
        </div>
        <div class="col">
          <label for="nursePrice">Price</label>
          <input type="text" id="nursePrice" class="form-control" placeholder="<%= nurse.price %> BD">
        </div>
      </div>
    </fieldset>
  </form>

  <h3><%= user?._id %></h3>



  <% let total = 0 %>
  <% nurse.reviews.forEach(function(r) { %> <% total += r.starRating %> <% }); %>

  <h4>Qualifications:</h4>
  <hr>
  <ul>
    <li><%= nurse.qualifications %></li>
  </ul>

  <h4>Education:</h4>
  <hr>
  <ul>
    <li><%= nurse.education %></li>
  </ul>

  <h4>Reviews:</h4>
  <hr>
  <% if (user && user?._id.toString() !== nurse._id.toString()) { %>
  <form id="add-review-form" method="POST" action="/nurses/<%= nurse._id %>/reviews">
    <input type="hidden" name="reviewerId" value="<%= user?._id %>">
    <input type="hidden" name="reviewerName" value="<%= user.name %>">
    <input type="hidden" name="reviewerAvatar" value="<%= user.avatar %>">

    <div class="form-group">
      <label for="content">Write a Review:</label>
      <textarea class="form-control" name="content" id="content" rows="4"></textarea>
    </div>

    <div class="form-group">
      <label for="rating">Rating:</label>
      <div class="rating-stars">
        <i class="fas fa-star star" data-rating="1"></i>
        <i class="fas fa-star star" data-rating="2"></i>
        <i class="fas fa-star star" data-rating="3"></i>
        <i class="fas fa-star star" data-rating="4"></i>
        <i class="fas fa-star star" data-rating="5"></i>
      </div>

      <input type="hidden" name="rating" id="rating">
    </div>

    <button class="btn btn-success" type="submit">Add Review</button>
  </form>
  <% } else if (!user) { %>
    <!-- If the user is not logged in, show a message to prompt them to log in -->
    <p>Please log in to leave a review.</p>
  <% } %>

  <% if (nurse.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% nurse.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.reviewerAvatar %>" referrerpolicy="no-referrer" ><%= r.reviewerName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td>
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (r.rating >= i) { %>
                  <i class="fas fa-star"></i>
                <% } else { %>
                  <i class="far fa-star"></i>
                <% } %>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / nurse.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>


  <script>
    // JavaScript code to handle star rating selection
    document.addEventListener("DOMContentLoaded", function() {
      const stars = document.querySelectorAll(".star");
      const ratingInput = document.getElementById("rating");
  
      function updateStars(rating) {
        stars.forEach((star, index) => {
          star.classList.toggle("active", index < rating);
        });
      }
  
      stars.forEach((star, index) => {
        star.addEventListener("click", () => {
          const ratingValue = index + 1;
          ratingInput.value = ratingValue;
          updateStars(ratingValue);
        });
  
        star.addEventListener("mouseover", () => {
          const ratingValue = index + 1;
          updateStars(ratingValue);
        });
  
        star.addEventListener("mouseout", () => {
          const ratingValue = parseInt(ratingInput.value);
          updateStars(ratingValue);
        });
      });
    });
  </script>

<%- include('../partials/footer') %>
